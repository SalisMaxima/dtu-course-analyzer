{
    "applications": {
        "gecko": {
            "id": "dtu.course.analyzer@gmail.com",
            "strict_min_version": "52.0"
        }
    },
	"name": "DTU Course Analyzer",
	"description": "Analyzes and scores courses on kurser.dtu.dk/xxxxx",
	"version": "1.3.5",
	"manifest_version": 3,
	"icons": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		},

	"content_scripts": [
	    {
	      "matches": ["http://kurser.dtu.dk/course/*", "https://kurser.dtu.dk/course/*"],
	      "css": ["css/jquery.dataTables.css"],
	      "js": ["js/jquery.js", "contentscript.js"]
	    }
	],
	
    "web_accessible_resources": [
        {
          "resources": [
            "images/*"
          ],
          "matches": [
            "*://*/*"
          ]
        },
        {
          "resources": ["db/data.js", "contentscript.js"],
          "matches": [
            "http://kurser.dtu.dk/course/*"
          ]
        }
      ],

"service_worker": {
    "script": "background.js",
    "background": {
        "service_worker": "background.js"
    }
},
	"browser_action": {
    	"default_icon": "icon128.png"
  	}
}
